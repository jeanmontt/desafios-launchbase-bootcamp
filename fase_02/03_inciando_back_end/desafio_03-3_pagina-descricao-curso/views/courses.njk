{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/courses.css">

    <title>Cursos</title>
{% endblock head %}

{% block content %}
    <div id="wrapper">
        <h1>Cursos</h1>
    </div>

    <section class="cards">
        {% for info in infos %}
            <div class="card grow" id="{{ info.id }}">
                <div class="card-number">
                    <h3>{{ info.number }}</h3>
                </div>
                <div class="card-image">
                    <img src="assets/{{ info.id }}.svg" alt="{{ info.img_alt }}">
                </div>
                <div class="card-content">
                    <p>{{ info.description }}</p>
                </div>
                <div class="info">
                    <p>{{ info.modules }}</p>
                    <p class="price">{{ info.price }}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    <script src="/scripts/scripts.js"></script>
{% endblock content %}