{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/create.css">
    <link rel="stylesheet" href="/styles/keyframes.css">
{% endblock head %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8969654/500x500) no-repeat center center / cover">

        </section>

        <section class="details">
            <h3>Novo professor</h3>

            <div class="item">
                <div>Avatar</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://" >
                </div>
                
            </div>

            <div class="item">
                <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do professor" >
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth" >
                </div>
            </div>

            <div class="item">
                <div>Grau de Ecolaridade</div>
                <div>
                    <select name="education">
                        <option value="EM">Ensino Médio completo</option> 
                        <option value="ES" selected>Ensino Superior completo</option>
                        <option value="M">Mestrado</option>
                        <option value="D">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span><input type="radio" name="class_type" value="Pres" checked>Presencial</span>
                    <span><input type="radio" name="class_type" value="Dist">À distância</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="expertise" placeholder="Separe as áreas de atuação por vírgula" >
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}
