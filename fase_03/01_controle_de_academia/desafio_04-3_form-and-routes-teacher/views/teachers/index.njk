        <section class="avatar" style="background: url(https://source.unsplash.com/collection/10553730/500x500) no-repeat center center / cover">

        </section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>Jean Araujo Monteiro</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>32</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>Doutorado</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
